<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Dashboard</title>
  <link rel="stylesheet" href="/public/styles.css">
  <link rel="icon" type="image/jpeg" href="/public/logo.jpg">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="max-w-3xl mx-auto p-12">
    <div class="flex justify-center mb-8">
      <img src="/public/logo.jpg" alt="Annie Jean Photography Logo" class="h-28 object-contain" loading="lazy" onerror="this.onerror=null;this.src='/public/logo.jpg';">
    </div>
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-2xl font-bold">Welcome, <%= userEmail %>!</h1>
      <a href="/logout" class="text-green-600 hover:underline">Logout</a>
    </div>
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold">Your Children</h2>
      <div class="flex gap-2">
        <a href="/dashboard/edit-family" class="btn-gold-gradient px-8 py-2">Edit Family</a>
      </div>
    </div>
    <% if (children && children.length) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% children.forEach(child => { %>
          <div class="bg-white rounded shadow p-4 flex flex-col items-center">
            <% if (child.photo) { %>
              <img data-src="<%= child.photo %>" alt="Child Photo" class="w-24 h-24 rounded-full object-cover mb-2 lazy" loading="lazy">
            <% } else { %>
              <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center mb-2">
                <span class="text-gray-400 text-2xl">ðŸ‘¤</span>
              </div>
            <% } %>
            <div class="font-semibold"><%= child.childFirstName %></div>
            <div class="text-sm text-gray-600 mb-2">DOB: <%= child.childDOB %></div>
            <div class="w-full mt-2">
              <label class="text-xs text-gray-600">Upload/replace photo</label>
              <input type="file" accept="image/*" class="child-upload-input mt-1 w-full text-sm" data-model-type="child" data-model-id="<%= child.id %>">
              <div class="child-upload-status text-xs text-blue-600 mt-1" style="display:none;"></div>
            </div>
            <div class="flex gap-2 mt-2">
              <form action="/dashboard/delete/child/<%= child.id %>" method="POST" onsubmit="return confirm('Are you sure you want to remove this child?');">
                <button type="submit" class="btn-gold-outline px-8 py-2">Remove</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-gray-600">No children found.</div>
    <% } %>
    <% if (adults && adults.length) { %>
      <div class="mt-12">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-xl font-semibold">Adults</h2>
          <a href="/dashboard/edit-adult" class="btn-gold-gradient px-8 py-2">Edit Adults</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% adults.forEach(adult => { %>
            <div class="bg-white rounded shadow p-4 flex flex-col items-center">
              <% if (adult.photo) { %>
                <img data-src="<%= adult.photo %>" alt="Adult Photo" class="w-24 h-24 rounded-full object-cover mb-2 lazy" loading="lazy">
              <% } else { %>
                <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center mb-2">
                  <span class="text-gray-400 text-2xl">ðŸ‘¤</span>
                </div>
              <% } %>
              <div class="font-semibold"><%= adult.firstName %> <%= adult.lastName %></div>
              <div class="text-sm text-gray-600 mb-2"><%= adult.email %></div>
              <div class="w-full mt-2">
                <label class="text-xs text-gray-600">Upload/replace photo</label>
                <input type="file" accept="image/*" class="adult-upload-input mt-1 w-full text-sm" data-model-type="adult" data-model-id="<%= adult.id %>">
                <div class="adult-upload-status text-xs text-blue-600 mt-1" style="display:none;"></div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Simple Lazy Loading -->
  <script src="/public/simple-lazy-loader.js"></script>
  <script>
    // Dashboard async upload for child/adult
    function bindUploadInputs(selector, statusSelector) {
      document.querySelectorAll(selector).forEach(input => {
        input.addEventListener('change', async (e) => {
          const file = input.files && input.files[0];
          if (!file) return;
          const modelType = input.getAttribute('data-model-type');
          const modelId = input.getAttribute('data-model-id');
          const statusEl = input.parentElement.querySelector(statusSelector);
          statusEl.style.display = 'block';
          statusEl.textContent = 'Uploading...';

          try {
            const body = new FormData();
            body.append('file', file);
            body.append('modelType', modelType);
            body.append('modelId', modelId);
            const resp = await fetch('/dashboard/upload-photo', { method: 'POST', body });
            const data = await resp.json();
            if (!resp.ok || !data.success) throw new Error(data.error || 'Upload failed');
            // Update avatar preview if present
            const img = input.closest('.bg-white').querySelector('img');
            if (img && data.photo) {
              img.src = data.photo;
              img.removeAttribute('data-src');
            }
            statusEl.textContent = 'Uploaded';
            setTimeout(() => { statusEl.style.display = 'none'; }, 1500);
          } catch (err) {
            statusEl.textContent = 'Upload failed. Try again.';
            setTimeout(() => { statusEl.style.display = 'none'; }, 4000);
          }
        });
      });
    }
    bindUploadInputs('.child-upload-input', '.child-upload-status');
    bindUploadInputs('.adult-upload-input', '.adult-upload-status');
  </script>
</body>
</html> 